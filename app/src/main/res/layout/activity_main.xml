<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steam.Calc"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/RelativeLayout_mainLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_Title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Currency rate"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/RelativeLayout_CurrencyRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/group_style_dark"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_NameTRY"
                    style="@style/obj_style_1"
                    android:layout_gravity="center"
                    android:text="TRY" />

                <TextView
                    style="@style/obj_style_1"
                    android:layout_gravity="center"
                    android:text="➔"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView_NameRUB"
                    style="@style/obj_style_1"
                    android:layout_gravity="center"
                    android:text="RUB" />

                <TextView
                    style="@style/obj_style_1"
                    android:layout_gravity="center"
                    android:text="≈"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView_ConvertedResult"
                    style="@style/obj_style_1"
                    android:layout_gravity="center"
                    android:background="@drawable/group_style_lite"
                    android:padding="5sp"
                    android:text="4.00" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView_Title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Replenishment calculator "
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/group_style_dark"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/group_style_lite"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_InputInfo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:text="You need to top-up Steam for:"
                        android:textAlignment="viewStart"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/group_style_lite"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/input_phone"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:hint="200"
                            android:inputType="phone"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView_CurrencyInfoTRY1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10sp"
                            android:text="TRY"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            style="@style/obj_style_1"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="0sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="0sp"
                            android:text="≈"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView_CurrencyValueRUB1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:text="800"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView_CurrencyNameRUB1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:text="RUB"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_ResultCommissionText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="It will cost:"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView_ResultCommission2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="210"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView_CurrencyInfoTRY2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="10dp"
                            android:text="TRY"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            style="@style/obj_style_1"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="0sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="0sp"
                            android:text="≈"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView_CurrencyValueRUB2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:text="840"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView_CurrencyInfoRUB2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="0sp"
                            android:layout_marginRight="10sp"
                            android:text="RUB"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_Title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Steam market calculator"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/group_style_dark"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_add"

                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="100dp"

                        android:layout_height="40dp"

                        android:background="@drawable/button_small"
                        android:padding="0dp"
                        android:text="add"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        app:backgroundTint="#FFFFFF" />

                    <Button
                        android:id="@+id/button_remove"

                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="100dp"
                        android:layout_height="40dp"

                        android:layout_marginStart="10dp"

                        android:background="@drawable/button_small"
                        android:padding="0dp"
                        android:text="remove"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        app:backgroundTint="#FFFFFF" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/group_style_lite"
                    android:orientation="vertical">


                    <ListView
                        android:id="@+id/listViewMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ListView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_settings"
                android:layout_width="match_parent"

                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="5sp"
                android:background="@drawable/button_settings"

                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:backgroundTint="#184354" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>